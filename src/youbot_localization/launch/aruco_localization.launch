<launch>
    <arg name="markerId"        default="125"/>
    <arg name="markerSize"      default="0.19"/>    <!-- in m -->
    <arg name="marker_frame"    default="robot"/>
    <arg name="ref_frame"       default="camera"/>  <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="corner_refinement" default="LINES"/> <!-- NONE, HARRIS, LINES, SUBPIX -->

    <arg name="rviz_file" default="$(find youbot_localization)/config/localization.rviz"/>

    <node pkg="tf" type="static_transform_publisher" name="map_to_camera_tf"
        args="0 0 1.0 0 0 -1.57 map camera 100"/>

    <node pkg="aruco_ros" type="single" name="aruco_single">
        <remap from="/camera_info" to="/camera/camera_info" />
        <remap from="/image" to="/camera/image_raw" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="marker_id"          value="$(arg markerId)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="camera"/>
        <param name="marker_frame"       value="$(arg marker_frame)" />
        <param name="corner_refinement"  value="$(arg corner_refinement)" />
    </node>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_file)"/>
</launch>
